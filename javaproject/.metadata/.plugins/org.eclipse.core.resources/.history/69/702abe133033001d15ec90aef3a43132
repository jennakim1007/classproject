package chapter02;

public class ValiableTest {
	
	// 클래스의 시작 
	public static void main(String[] args) {
		
		// 자료형 변수이름 = 데이터 ;
		int num = 1000;
		// 숫자 1000을 저장하기 위한 메모리 공간 생성, 저장 공간을 찾아갈 수 있는 주소를 가지는 이름 num
		// 변수 선언과 초기화 
		
		// 숫자 
		//	- 정수 : byte, short, int, long
		//	- 실수 : float, double
		// 문자 : char(character)
		// 논리값 : boolean
		// 문자열( 참조형 ) : String(-> string은 클래스의 이름이다)
		
		int num1 = 100; 
		byte num2 = 100; 
		short num3 = 100;
		long num4 = 100;
		
		
		
		
	}
	
	
	
	
	
	

}
